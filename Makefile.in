prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
localstatedir = @localstatedir@
sysconfdir = @sysconfdir@
INSTALL = @INSTALL@
SED = @SED@
CC = @CC@
DEFS = -O @DEFS@
LIBS = @LIBS@
INCS = -I.

CONF = devd/asmctl.conf
SRCS = src/asmctl.c
OBJS = $(SRCS:.c=.o)
PROG = asmctl

all: $(PROG) devd/asmctl.conf

$(PROG): $(OBJS)
	$(CC) -o $@ $(OBJS) $(LIBS)

.c.o:
	$(CC) $(INCS) $(DEFS) -c -o $@ $<

$(CONF): $(CONF).s
	$(SED) -e "s|%%BINDIR%%|$(bindir)|" < $(CONF).s > $(CONF)

clean:
	rm -f $(OBJS) $(PROG) devd/asmctl.conf

install: $(PROG) $(CONF)
	$(INSTALL) -d $(bindir)
	$(INSTALL) -m 4755 $(PROG) $(bindir)
	$(INSTALL) -d -m 644 $(sysconfdir)/devd
	$(INSTALL) -m 644 $(CONF) $(sysconfdir)/devd
